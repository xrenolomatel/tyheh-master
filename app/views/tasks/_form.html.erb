
<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field customer-e">
    <%= form.label :customer_id %>
    <%= form.select :customer_id, options_for_select(Customer.all.pluck(:name, :id), selected: form.object.customer_id)%>
  </div>
<br/>
  <div class="field type-e">
    <%= form.label :type_id %>
    <%= form.select :type_id, options_for_select(TaskType.all.pluck(:name, :id), selected: form.object.type_id)%>
  </div>

  <div class="field title-e">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field description-e">
    <%= form.label :description %>
    <%= text_area_tag(:ad, :text, size: '23x10') %>
    </div>

  <div class="field start-time-e">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
