<p id="notice"><%= notice %></p>

<h1 class="title">Tasks</h1>
<div class="table-responsive-md">
  <table class="table table-striped">
    <thead>
      <tr class="table_title">
        <th>Customer</th>
        <th>Type</th>
        <th>User</th>
        <th>Title</th>
        <th>Description</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Duration</th>

        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td scope="row"><%= task.customer.name%></td>
          <td><%= task.task_type.name %></td>
          <td><%= task.user.email %></td>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.start_time %></td>
          <td><%= task.end_time %></td>
          <td><%= Time.at(task.end_time - task.start_time).utc.strftime("%H:%M:%S") if task.end_time %></td>
          <!-- <td><%= link_to 'Show', task %></td> <td><%= link_to 'Edit', edit_task_path(task) %></td> <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<span class="new-task">
  <%= link_to 'New Task', new_task_path %>
</span>


